{
    "name": "問卷助手",
	"manifest_version": 2,
    "version": "1.0.1", 
    "description": "我給老師滿分！",
    "icons": {
        "16": "icons/icon_16.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
    },
	"background":{
        "page": "./background.html",
		"script": "./js/background.js",
		"persistent": true
    },
    "browser_action": {
	    "default_title": "",
	    "default_icon": "icons/icon_16.png"
	},
    "permissions": ["tabs","activeTab","https://eportal.stust.edu.tw/teaching_feedback/*","https://identity.stust.edu.tw/*"],
	"homepage_url": "http://osk2.pixnet.net/blog",
    "content_scripts": [
        {
            "matches": ["https://eportal.stust.edu.tw/teaching_feedback/*","https://identity.stust.edu.tw/*"],
            "js": ["./js/jquery-1.9.1.min.js","./js/content_script.js"],
            "run_at": "document_end"
        }
    ]
}