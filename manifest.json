{
    "name": "問卷助手︰南台科大版",
	"manifest_version": 2,
    "version": "1.1.6", 
    "description": "我給老師滿分！",
    "icons": {
        "16": "icons/icon_16.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
    },
	"background":{
        "page": "./background.html",
		"script": "./js/background.js",
		"persistent": true
    },
    "browser_action": {
	    "default_title": "",
	    "default_icon": "icons/icon_16.png"
	},
    "permissions": ["tabs","activeTab","https://eportal.stust.edu.tw/teaching_feedback/*","https://identity.stust.edu.tw/*"],
	"homepage_url": "http://www.osk2.me",
    "content_scripts": [
        {
            "matches": ["https://eportal.stust.edu.tw/teaching_feedback/*","https://identity.stust.edu.tw/*"],
            "js": ["./js/jquery-2.0.3.min.js","./js/sweet-alert.min.js","./js/content_script.js"],
            "css": ["css/sweet-alert.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "js/jquery-2.0.3.min.map"
    ]
}